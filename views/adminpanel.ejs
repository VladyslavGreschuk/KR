<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/style.css">
    <title>List</title>
</head>
<body>

    <header>
        <div class="header-left">
            <a href="/phonebook">
                <button class="logo-button">
                    Phonebook
                </button>
            </a>
        </div>
        <div class="header-right">
            <a href="/adminpanel/users">
                <button class="head-button">
                    Admin Panel
                </button>
            </a>
            <a href="/about">
                <button class="head-button">
                    Про нас
                </button>
            </a>
            <a href="/login">
                <button class="head-button">
                    Вийти
                </button>
            </a>
        </div>
    </header>


    <div class="options-container">
        <a href="/adminpanel/users"><button class="option-button" onclick="">Показати усіх користувачів</button></a>
        <a href="/adminpanel/contacts"><button class="option-button" onclick="">Показати усі контакти</button></a>
    </div>

    <div class="contacts-table">
    <table class="table-contacts">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Ім'я</th>
                <th>Прізвище</th>
                <th>Email</th>
                <th>Номер</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(contact => { %>
                <tr>
                    <td><%= contact.id %></td>
                    <td><%= contact.nickname %></td>
                    <td><%= contact.name %></td>
                    <td><%= contact.surname %></td>
                    <td><%= contact.email %></td>
                    <td><%= contact.number %></td>
                    <td><%= contact.role %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    </div>
</body>
</html>